<phone:PhoneApplicationPage
    x:Class="Cueros.App.Phone.Views.DetalleProducto"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"  Orientation="Portrait"
    xmlns:tool="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    shell:SystemTray.IsVisible="False">

    <!--LayoutRoot contiene la cuadrícula raíz donde se coloca el resto del contenido de la página-->
    <phone:Panorama Name="panorama"
                    Title="{Binding Nombre}">

        <!--Elemento Panorama uno-->
        <phone:PanoramaItem Header="Imagenes">
            <ListBox ItemsSource="{Binding Fotos}">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <tool:WrapPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="{StaticResource PhoneAccentBrush}"
                                BorderThickness="3"
                                Margin="10">
                            <Image Width="400"
                                   Height="200"
                                   Stretch="UniformToFill"
                                   Source="{Binding URL}">
                            </Image>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </phone:PanoramaItem>

        <!--Elemento Panorama dos-->
        <phone:PanoramaItem Header="Detalles">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Modelo:"
                               FontWeight="Bold"
                               Width="130"/>
                    <TextBlock Name="id" Text="{Binding Modelo}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Descripción:"
                               FontWeight="Bold"
                               Width="130"/>
                    <TextBlock Name="descripcion" Text="{Binding Descripcion}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Categoria:"
                               FontWeight="Bold"
                               Width="130"/>
                    <TextBlock Name="linea" Text="{Binding Categoria.Nombre}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Temporada:"
                               FontWeight="Bold"
                               Width="130"/>
                    <TextBlock Text="{Binding Temporada}"/>
                </StackPanel>
            </StackPanel>
        </phone:PanoramaItem>

        <phone:PanoramaItem Header="Materiales">
            <ListBox ItemsSource="{Binding Materiales}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <tool:ExpanderView>
                            <tool:ExpanderView.Expander>
                                <StackPanel>
                                    <StackPanel.Resources>
                                        <Style TargetType="TextBlock" x:Key="caja">
                                            <Setter Property="FontSize"
                                                    Value="25"/>
                                        </Style>
                                    </StackPanel.Resources>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Material:"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Nombre}"
                                                   Style="{StaticResource caja}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Nombre Comercial:"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding NombreComercial}"
                                                   Style="{StaticResource caja}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Color:"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding Color}"
                                                   Style="{StaticResource caja}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Costo Unidad:"
                                                   FontWeight="Bold"/>
                                        <TextBlock Text="{Binding CostoUnidad}"
                                                   Style="{StaticResource caja}"/>
                                    </StackPanel>
                                </StackPanel>
                            </tool:ExpanderView.Expander>
                            <tool:ExpanderView.Items>
                                <ListBox ItemsSource="{Binding Proveedores}">
                                    <ListBox.Resources>
                                        <Style TargetType="TextBlock" x:Key="caja">
                                            <Setter Property="FontSize"
                                                    Value="20"/>
                                        </Style>
                                    </ListBox.Resources>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Border BorderBrush="{StaticResource PhoneAccentBrush}"
                                                    BorderThickness="1">
                                                <StackPanel Margin="5">
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Proveedor:"/>
                                                        <TextBlock Text="{Binding Nombre}"
                                                                   Style="{StaticResource caja}"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Dirección:"/>
                                                        <TextBlock Text="{Binding Direccion}"
                                                                   Style="{StaticResource caja}"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Correo:"/>
                                                        <TextBlock Text="{Binding Correo}"
                                                                   Style="{StaticResource caja}"/>
                                                    </StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="Telefono:"/>
                                                        <TextBlock Text="{Binding Telefono}"
                                                                   Style="{StaticResource caja}"/>
                                                    </StackPanel>
                                                </StackPanel>
                                            </Border>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </tool:ExpanderView.Items>
                        </tool:ExpanderView>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </phone:PanoramaItem>
    </phone:Panorama>

</phone:PhoneApplicationPage>