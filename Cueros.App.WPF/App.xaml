<Application x:Class="Cueros.App.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="Views/Inicio.xaml">
    <Application.Resources>
        <DataTemplate x:Key="ListaProductos">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="12,2,0,4" Height="105" Width="432" Background="#FF928A95">
                    <Image  Source="{Binding Fotos[0].URL}" Width="100" Height="100" Stretch="Fill" Margin="10"/>
                    <TextBlock Text="{Binding Nombre}" Width="220" TextWrapping="Wrap" Margin="10,0" FontSize="25" Foreground="DarkMagenta" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="ListaCategorias">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="12,2,0,4" Height="105" Width="432" Background="#FF928A95">
                    <Image  Source="{Binding UrlImagen}" Width="100" Height="100" Stretch="Fill" Margin="10"/>
                    <TextBlock Text="{Binding Nombre}" Width="220" TextWrapping="Wrap" Margin="10,0" FontSize="25" Foreground="DarkMagenta" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Application.Resources>
</Application>
